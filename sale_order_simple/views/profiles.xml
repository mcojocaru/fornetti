<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="action_user_profile" model="ir.actions.act_window">
      <field name="name">Profile Utilizatori</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale_order_simple.user_profile</field>
      <field name="view_type">form</field>
      <field name="view_mode">form, tree</field>
    </record>

    <record model="ir.actions.act_window.view" id="user_profile_view_form_view">
      <field name="name">Vanzare Produse</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="user_profile_form_view"/>
      <field name="act_window_id" ref="action_user_profile"/>
    </record>

    <!--  -->
    <record id="user_profile_form_view" model="ir.ui.view">
      <field name="name">Profil Utilizator</field>
      <field name="model">sale_order_simple.user_profile</field>
      <field name="arch" type="xml">
	<form string="Produse">
	  <group>
	    <group>
	      <field name="name"/>
	      <field name="user_id"/>
	    </group>
	    <group>
	      <field name="so_partner_id"/>
	      <field name="warehouse_id"/>
	    </group>
	  </group>

	  <group>
	    <group>
	      <field name="product_ids" string="Produse">
		<tree>
		  <field name="product_id" string='Produs'/>
		</tree>
	      </field>
	    </group>
	    <group>
	    </group>
	  </group>
	</form>
      </field>
    </record>

    <record model="ir.actions.act_window.view" id="user_profile_view_tree_view">
      <field name="name">Vanzare Produse</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="user_profile_tree_view"/>
      <field name="act_window_id" ref="action_user_profile"/>
    </record>

    <!--  -->
    <record id="user_profile_tree_view" model="ir.ui.view">
      <field name="name">Profile Utilizatori</field>
      <field name="model">sale_order_simple.user_profile</field>
      <field name="arch" type="xml">
	<tree string="Profile">
	  <field name="name"/>
	  <field name="user_id"/>
	  <field name="so_partner_id"/>
	  <field name="warehouse_id"/>
	</tree>
      </field>
    </record>

  </data>
</openerp>
