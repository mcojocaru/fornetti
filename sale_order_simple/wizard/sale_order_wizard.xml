<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="action_sale_order_wizard" model="ir.actions.act_window">
      <field name="name">Vanzare Produse</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sale_order_simple.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <!--  -->
    <record id="action_sale_order_wizard_form" model="ir.ui.view">
      <field name="name">Vanzare Produse</field>
      <field name="model">sale_order_simple.wizard</field>
      <field name="arch" type="xml">
	<form string="Produse">
	  <group>
	    <group>
	      <field name="user_id" invisible="1"/>
	      <field name="profile_id" invisible="1"/>
	      <field name="order_id" invisible="1"/>
	      <field name="partner_id" invisible="1"/>
	      <field name="pricelist_id" invisible="1"/>
	      <field name="company_id" invisible="1"/>
	      <field name="currency_id" invisible="1"/>
	      <field name="state" invisible="1"/>
	    </group>
	    <group>
	    </group>
	  </group>

	  <field name="wiz_line" Dstring="Produse" widget="one2many" mode="tree">
	    <tree editable="top" create="false">
              <field name="currency_id" invisible="1"/>
              <field name="product_id" options="{'no_open': True}" readonly="1" string="Produs"/>
              <field name="product_uom_qty" string="Cantitate"/>
              <field name="price_unit" readonly="1" string="Pret Unitar"/>
              <field name="product_uom" readonly="1" options='{"no_open": True}' string="UM"/>
              <field name="price_total" widget="monetary" string="Subtotal"/>
              <field name="price_subtotal" widget="monetary" invisible="1"/>
              <field name="price_tax" widget="monetary" invisible="1"/>
	    </tree>
	  </field>
	  <group>
	    <field name="amount_total" string="Pret Total"/>
	  </group>
	  <footer>
	    <button name="confirm" string="Valideaza" class="oe_stat_button" type="object" />
	    <button name="cancel" string="Anuleaza" class="oe_stat_button" type="object" />
	  </footer>
	</form>
      </field>
    </record>
    <record model="ir.actions.act_window.view" id="sale_order_wizard_view_form_view">
      <field name="name">Vanzare Produse</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="action_sale_order_wizard_form"/>
      <field name="act_window_id" ref="action_sale_order_wizard"/>
    </record>

  </data>
</openerp>
